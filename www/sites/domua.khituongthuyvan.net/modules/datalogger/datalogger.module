/**
 *Lấy dữ liệu datalogger trả về.
 */

function _datalogger_result($sms, $pa = ''){ 	
	global $datalogger_pattern;
	
	$pattern = $datalogger_pattern;
	
	if(empty($pa) || $pa == '') {
		for($i = 0; $i < count($pattern); $i++ ){
			$len = strlen($pattern[$i]);
			$pos =  strpos($sms, $pattern[$i]);
			if(!empty($pos)){
				return trim(substr($sms,$pos+$len,-3));
			}
		}
	}
	else {
		$len = strlen($pa);
		$pos =  strpos($sms, $pa);
		if(!empty($pos)) {
			return trim(substr($sms, $pos + $len, -3));
		}
	}
	return '';
}

function digi_debug($s, $exit=0, $file=0)
{
	
	if ($file)
	{
		$myFile = "c:/testFile.txt";
		$fh = fopen($myFile, 'a') or die("can't open file");
		
		ob_start();
		print_r($s);
		$out = ob_get_contents();
		ob_end_clean();
		
		fwrite($fh, $out);
		fwrite($fh, "\n\n");
		fclose($fh);
	}
	else {
		print "<pre>";
		print_r($s);		
		print "</pre>";
	}
	
	if ($exit) exit;
}




   

